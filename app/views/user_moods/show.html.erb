    <nav class="navbar navbar-collapse-lg navbar-light bg-white shadow-sm py-3">
        <div class="container">
            <a class="navbar-brand" href="http://localhost:3000/">
                <small class="font-weight-bold mb-0 text-uppercase">Mood Digest</small>
            </a>
            <button class="navbar-toggler navbar-toggler-left" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <a class="nav-link scroll-link" href="#one">Quote <span class="sr-only">(current)</span></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link scroll-link" href="#two">Art</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link scroll-link" href="#three">Music</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link scroll-link" href="http://localhost:3000/user_moods">Your Moods</a>
                    </li>
                     <li class="nav-item">
                        <a class="nav-link scroll-link" href="http://localhost:3000/users/<%=@current_user.id%>/edit">Settings</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link scroll-link" href="http://localhost:3000/logout">Sign Out</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
